            <div class=" row w-100 d-flex justify-content-start align-items-center" >
                <div class="col-1 mx-5">
                    <a class="navbar-brand" asp-area="" asp-page="/User/Dashboard"><img src="~/Images/Admin/logo4.png" alt="" srcset="" width="110px" height="70px" class="rounded rounded-2 mx-3"> </a>
                </div>
                <div class="col-6">
                    <div class="row" style="background-color:#E9ECEF; border-radius:20px">
                        <div class=" col-1 p-2 text-center">
                            <i class="fa-solid fa-magnifying-glass fs-3"></i>
                        </div>
                        <form class="containerinput col" method="get" action="/User/ShowProducts">                        
                             <input type="text" name="queryString" class="w-100 col p-1 inputchange border-0 p-2" style="background-color:#E9ECEF;color:#495057">
                        </form>
                    </div>
                </div>
                <div class="nav__link col-4 d-flex justify-content-between align-items-baseline">
                    <a asp-page="../User/UserProfile/UsersProfile" class="mx-3 mt-3" >
                        Profile
                    </a>
                    <div>
                        @if (Model.logoutchecksession != null)
                        {
                            <a asp-page="../User/UserLogout" class=" fs-5">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a asp-page="../User/UserLogin" class=" fs-5">
                                Login
                            </a>
                        }
                    </div>
                    <a asp-page="../User/UserCart" class="mx-3 mt-3">
                        Cart
                    </a>
                    <a asp-page="../Vendor/VendorLogin" class="mx-3 mt-3 ">
                        Become a Seller
                    </a>
                </div>
