<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EsyaCart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EsyaCart.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminHomePageStyleSheet.css" asp-append-version="true"   />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-2 col-md-2 col-xl-2 px-sm-2 px-0 position-fixed" style="background-color:rgb(237,241,243);">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <div class="mx-2">
                        <img class="image" src="~/Images/Admin/logo4.png" alt="Alternate Text" height="80" width="120"/>
                    </div>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item mt-3">
                            <a asp-page="/Admin/AdminHomePage" class=" align-middle px-0">
                                <i class="fa-solid fa-house"></i> <span class="ms-1 d-none d-sm-inline">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a asp-page="/Admin/UserListPage" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-user"></i> <span class="ms-1 d-none d-sm-inline">Customers</span>
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a asp-page="/Admin/VendorListPage" class="nav-link align-middle px-0">
                                <i class="fa-regular fa-id-card"></i> <span class="ms-1 d-none d-sm-inline">Vendor</span>
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a  asp-page="/Admin/OrderList"   class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-table-cells-row-unlock"></i> <span class="ms-1 d-none d-sm-inline">Orders</span>
                            </a>
                        </li
                        <li class="nav-item mt-2">
                            <a asp-page="/Admin/ProductsList" class="nav-link align-middle px-0">
                               <i class="fa-solid fa-box-open"></i> <span class="ms-1 d-none d-sm-inline">Products</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/Images/Admin/AdminProfile.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1" id="admin">Admin</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li>
                                <button class="dropdown-item" type="button"  data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">Profile</button>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                               <li><a class="dropdown-item" asp-page="/Admin/LogOutPage">Sign out</a></li>

                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-10 position-absolute py-3 overflow-hidden" style="left: 260px" >
                @RenderBody()
            </div>
        </div>
    </div>

<script src="https://kit.fontawesome.com/6978f47505.js" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


@await RenderSectionAsync("Scripts", required: false)



<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
  <div class="offcanvas-header" style="background-color:#DEE2E6;">
    <h5 class="offcanvas-title align-content-center"  id="offcanvasScrollingLabel">Admin's Profile</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body" style="background-color:#DEE2E6;">
    <div class="d-flex justify-content-center " style=" background-color:#DEE2E6; ">
        <img src="~/Images/Admin/Admin-profile-pic-removebg-preview.png" alt="Alternate Text" style="background-color:#DEE2E6; height:200px"/>
    </div>
    <div class="mt-1">
          <ul class="list-group list-group-flush" >
          <li class="list-group-item">Name: Sooraj</li>
          <li class="list-group-item">Phone Number: 9999999999</li>
          <li class="list-group-item">Email: sooraj@esyacart.com</li>
          <li class="list-group-item">Address: Manipal,Udupi</li>
          <li class="list-group-item">Pin: 563104</li>
        </ul>
    </div>
  </div>
</div>

</body>
</html>






