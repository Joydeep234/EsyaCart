<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EsyaCart.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
    <section class="m-0 p-0">
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-6">
                    <img src="~/Images/Seller/6333050-removebg-preview.png" alt="Alternate Text" style="height: 430px; width: 450px; margin-inline: auto" />
                </div>

                <div class="col-6 col-md-6">
                    <div class="p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12 my-3">
                                <div class="mb-2">
                                    <h2 class="signup__h2">Registration</h2>
                                    <h3 class="fs-6 fw-normal text-secondary m-0">please enter your details to register as seller</h3>

                                </div>
                            </div>
                        </div>
                        <form method="post">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div>
                                    <label asp-for="USInput.EmailID" class="form-label">Email</label>
                                    <input asp-for="USInput.EmailID" class="form-control" type="email" placeholder="email" />
                                    <span asp-validation-for="USInput.EmailID" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="USInput.ContactNumber" class="form-label">Contact Number</label>
                                    <input asp-for="USInput.ContactNumber" class="form-control" type="text" placeholder="phone number" />
                                    <span asp-validation-for="USInput.ContactNumber" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="USInput.Password" class="form-label">Password</label>
                                    <input type="password" asp-for="USInput.Password" class="form-control"  placeholder="Password"/>
                                    <span asp-validation-for="USInput.Password" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="USInput.ConformPassword" class="form-label">Confirm Password</label>
                                    <input type="password" asp-for="USInput.ConformPassword" class="form-control" placeholder="Confirm-password"/>
                                    <span asp-validation-for="USInput.ConformPassword" class="text-danger"></span>
                                </div>
                                <div>
                                    @if (TempData["error"] != null)
                                    {
                                        <span class="text-danger">@TempData["error"]</span>
                                    }
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl signup__btn" type="submit">Sign up</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row mt-4">
                            <div class="col-12">
                                <p class="m-0 text-secondary text-center">Already have an account? <a asp-area="" asp-page="/User/UserLogin" class="link-primary text-decoration-none">Sign In</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>