@page
@model EsyaCart.Pages.User.UserLogin
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Login to your account</h2>
                        <form  method="post" class="form-control">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div >
                                        <label asp-for="LInput.Email"></label>
                                        <input asp-for="LInput.Email" class="form-control" />
                                        <span asp-validation-for="LInput.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div>
                                        <label asp-for="LInput.Password"></label>
                                        <input type="password" asp-for="LInput.Password" class="form-control" />
                                        <span asp-validation-for="LInput.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="">
                                    @if(TempData["error"]!=null){
                                        <span class="text-danger">@TempData["error"]</span>
                                    }
                                </div>
                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-primary form-control my-2">Login</button>
                                        
                                    </div>
                                </div>
                                <div class="col-12">
                                    <a asp-page="../User/UserSignup" class="btn btn-outline-primary">Don't have an account? -->Sign Up</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>