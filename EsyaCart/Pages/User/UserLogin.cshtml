<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <title>@ViewData["Title"] - EsyaCart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EsyaCart.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Vendor.css" asp-append-vesrsion="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <section class="p-3 p-md-4 p-xl-5 mt-5">
        <div class="container ">
            <div class="card border-light-subtle shadow-sm login__card ">
                <div class="row g-0">
                    <div class="col-12 col-md-6">
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <div class="col-10 col-xl-8 py-1">
                                <div class="d-flex justify-content-center align-content-center my-2">
                                    <img class="img-fluid mb-2 mx-auto" loading="lazy" src="~/Images/Seller/esyacart-removebg-preview.png" width="200" height="40" alt="BootstrapBrain Logo">
                                </div>
                                <div class="mb-3">
                                    @* <hr class="border-primary-subtle mb-4"> *@
                                    <h2 class="h1 mb-4 login__title">
                                        Bring your brand on Esyacart.in
                                    </h2>
                                    <p class="lead m-0 login__tagline">Pay lesser selling fee* with every order on India's most visited online shopping destination.</p>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-3">
                                        <h3 class="login__card__title">Log in</h3>
                                    </div>
                                </div>
                            </div>
                            <form method="post">
                                <div class="row gy-3 gy-md-4 overflow-hidden">
                                    <div>
                                        <label asp-for="LInput.Email" for="email" class="form-label">Email</label>
                                        <input asp-for="LInput.Email" type="email" class="form-control" name="email" id="email" placeholder="name@example.com" />
                                        <span asp-validation-for="LInput.Email" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label asp-for="LInput.Password" for="password" class="form-label">Password</label>
                                        <input type="password" asp-for="LInput.Password" class="form-control" name="password" id="password" value="" placeholder="Password" />
                                        <span asp-validation-for="LInput.Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn bsb-btn-xl login__btn" type="submit">Login</button>
                                        </div>
                                    </div>
                                    <div class="">
                                        @if (TempData["error"] != null)
                                        {
                                            <span class="text-danger">@TempData["error"]</span>
                                        }
                                    </div>
                                </div>
                            </form>
                            <div class="row mt-4">
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">Don't have an account? <a asp-area="" asp-page="/User/UserSignUp" class="link-primary text-decoration-none">Sign up</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>