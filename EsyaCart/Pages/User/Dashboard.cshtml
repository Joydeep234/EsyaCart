@page
@model EsyaCart.Pages.User.Dashboard
@using System.Globalization
@{
    ViewData["Title"] = "Dashboard";
}


<div class="mb-5">
    <div id="carouselExampleControls" class="carousel slide setheight" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/Images/User/Logo.jpeg" class="d-block w-100 setheight" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/Images/User/Logo.jpeg" class="d-block w-100 setheight" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/Images/User/Logo.jpeg" class="d-block w-100 setheight" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="row mt-5">
    @if (Model.productsEntity.Count > 0)
    {
        @foreach (var product in Model.productsEntity)
        {
            <div class="col-md-3 m-4 d-flex align-items-stretch p-4 border">
                <a asp-page="ShowProducts" asp-route-productcatagoryID="@product.Category_Id" class="text-dark text-decoration-none" style="width: 100%;">
                    <div class="card border border-0">
                        <img src="~/Images/User/Logo.jpeg" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title text-center">@CultureInfo.CurrentCulture.TextInfo.ToTitleCase(product.ProductName.ToLower())</h5>
                            <p class="card-text text-center">@product.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <h1>Products Not Available</h1>
    }
</div>

</div>