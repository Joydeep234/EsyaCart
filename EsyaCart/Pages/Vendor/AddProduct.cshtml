@page
@model EsyaCart.Pages.Vendor.AddProduct
@{
}
<section class="m-0 p-0">
    <div class="card">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-12 col-md-6 bsb-tpl-bg-lotion">
                <div class="p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-2">
                                <h2 class="h3">Add New Product</h2>
                            </div>
                        </div>
                    </div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="row gy-1 gy-md-2 overflow-hidden">
                            <div class="col-12">
                                    <label asp-for="addProductModel.ProductName" class="form-label">Product Name</label>
                                    <input type="text" asp-for="addProductModel.ProductName" class="form-control" />
                                    <span asp-validation-for="addProductModel.ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="addProductModel.Price" class="form-label">Price</label>
                                <input type="number" asp-for="addProductModel.Price" class="form-control" />
                                <span asp-validation-for="addProductModel.ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="addProductModel.Quantity" class="form-label">Quantity</label>
                                <input type="text" asp-for="addProductModel.Quantity" class="form-control" />
                                <span asp-validation-for="addProductModel.Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="addProductModel.Descirption" class="form-label">Description</label>
                                <input type="text-area" asp-for="addProductModel.Descirption" class="form-control" />
                                <span asp-validation-for="addProductModel.Descirption" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="addProductModel.Category_Id" class="form-label">Category</label>
                                <select asp-for="addProductModel.Category_Id" class="form-control">
                                    <option value="">Select a category</option>
                                    @foreach (var category in (List<SelectListItem>)ViewData["CategoryList"])
                                    {
                                        <option value="@category.Value">@category.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-12">
                                <label asp-for="addProductModel.ImageUrl" class="form-label">Upload Image</label>
                                <input asp-for="addProductModel.ImageUrl" class="form-control" />
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn bsb-btn-xl btn-primary" type="submit">Add</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
</section>