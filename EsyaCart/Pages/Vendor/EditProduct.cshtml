@page
@model EsyaCart.Pages.Vendor.EditProduct
@{
}

<section class="m-0 p-0 mx-5">
    <div class="card mx-5 editProcuts__card" style="box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-12 col-md-6">
                    <div class="p-md-4 py-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-2">
                                    <h2 class="h3">Add New Product</h2>
                                </div>
                            </div>
                        </div>
                            <form method="post">
                                <div class="mt-2">
                                    <label asp-for="editProducts.ProductName" class="form-label">Product Name</label>
                                    <input asp-for="editProducts.ProductName" class="form-control"/>
                                    <span asp-validation-for="editProducts.ProductName" class="text-danger"></span>
                                </div>
                                <div class="mt-2">
                                    <label asp-for="editProducts.Price" class="form-label">Price</label>
                                    <input asp-for="editProducts.Price" type="text" class="form-control"/>
                                    <span asp-validation-for="editProducts.Price" class="text-danger"></span>
                                </div>
                                <div class="mt-2">
                                    <label asp-for="editProducts.Quantity" class="form-label">Quantity</label>
                                    <input asp-for="editProducts.Quantity" type="number" class="form-control" />
                                    <span asp-validation-for="editProducts.Quantity" class="text-danger"></span>
                                </div>
                                <div class="mt-2">
                                    <label asp-for="editProducts.Description" class="form-label">Description</label>
                                    <input asp-for="editProducts.Description" type="text" class="form-control"/>
                                    <span asp-validation-for="editProducts.Description" class="text-danger"></span>
                                </div>
             
                                <button type="submit" class="btn btn-primary mt-2">Save</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
